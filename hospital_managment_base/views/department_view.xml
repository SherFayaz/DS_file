<?xml version="1.0" encoding="UTF-8" ?>
<data>
    <!-- this is a department form -->
    <record id="kgn_hospital_department_form_view" model="ir.ui.view">
        <field name="name">kgn hospital department from</field>
        <field name="model">galaxy.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!--                        <div class="oe-title">-->
                    <!--                            <h1>-->
                    <!--                                <field name="sequences"/>-->
                    <!--                            </h1>-->
                    <!--                        </div>-->
                    <group>
                        <group>
                            <field name="d_name"/>
                            <field name="d_description"/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
<!--                            <field name="patient_ids"/>-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--  this is a kgn hospital patient tree view-->
    <record id="kgn_hospital_department_tree_view" model="ir.ui.view">
        <field name="name">kgn hospital department tree</field>
        <field name="model">galaxy.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="d_name"/>
                <field name="d_description"/>
                <field name="doctor_id"/>
<!--                <field name="patient_ids"/>-->
            </tree>
        </field>
    </record>
    <!--  this is a kgn department action-->
    <record id="kgn_hospital_department_action_id" model="ir.actions.act_window">
        <field name="name">Hospital department action</field>
        <field name="res_model">galaxy.department</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- this is hospital and patient menu -->

    <menuitem id="menu_hospital_sub_3_id" name="Department" parent="menu_hospital_root_1_id"
              action="kgn_hospital_department_action_id" sequence="4"/>
